<div class="container-fluid well boxshadow">
  <h2><%= t "requests.title" %></h2>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= form_for current_user.requests.build do |f| %>
        <%= render "shared/error_messages", object: @request %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control",
            placeholder: t("requests.content"), rows: 20 %>
        </div>
        <div class="actions text-center">
          <%= f.submit t("requests.sent"), class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
